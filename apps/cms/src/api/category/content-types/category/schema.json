{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "name": "category"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string"
    },
    "recipes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::recipe.recipe",
      "mappedBy": "category"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo.description"
    }
  }
}
