{
  "name": "e2e",
  "scripts": {
    "test:cypress:start:cms": "rush start:cypress --only=cms",
    "test:cypress:start:blog": "rush start:cypress --only=blog",
    "test:cypress:start:blog:ci": "rush start:cypress:ci --only=@blog",
    "test:cypress:open": "lerna run cy:open --stream",
    "test:cypress:run": "lerna run cy:run --stream",
    "test:e2e": "start-server-and-test 'start-server-and-test \"test:cypress:start:cms\" 1338 \"test:cypress:start:blog\"' '8001' 'test:cypress:open'",
    "test:e2e:ci": "start-server-and-test 'start-server-and-test \"test:cypress:start:cms\" 1338 \"test:cypress:start:blog:ci\"' '8001' 'test:cypress:run'",
    "test:visual:run": "lerna run pup:run --stream",
    "test:visual": "start-server-and-test 'start-server-and-test \"test:cypress:start:cms\" 1338 \"test:cypress:start:blog:ci\"' '8001' 'test:visual:run'",
    "test:visual:update": "UPDATE_SNAPSHOTS=true yarn test:visual"
  },
  "dependencies": {
    "start-server-and-test": "^1.12.1"
  }
}
